@{
    ViewData["Title"] = "Home Page";
}
@model Pizza

<body>
    <section class="text-center bg-dark  text-white py-5" id="pizza-library">
        <div class="container">
            <div class=" display text-white border-2 border rounded border-danger">
                <div class="row">
                    <div class="col-4">
                        <img class="img-fluid" src="@Model.ImgPath" alt="@Model.Name" />
                    </div>
                    <div class="col">         
                        <div class="d-flex justify-content-around align-items-center  py-2">
                            <h3 class="py-1">@Model.Name</h3>
                            <span class="py-1">CAtegoria: @Model.Category.Name</span>
                            <span class="py-1">Price : @Model.Price $</span>
                        </div>
                        <p class="px-2"> Ingredienti: <small>@Model.Description</small></p>
                        <ul>
                            @foreach (Ingredient item in Model?.Ingredients)
                            {
                                <li>@item.Title</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center gap-4">
                <a href="@Url.Action("Index", "Pizza")" class="btn btn-danger my-3">Home</a>
                <form asp-action="Delete" asp-controller="Pizza" asp-route-id="@Model.PizzaId" method="post">
                    <button class="btn btn-warning">Elimina</button>
                </form>
                <a href="@Url.Action("Update", "Pizza", new{ id = Model.PizzaId})" class="btn btn-primary my-3">Modifica</a>
            </div>    
        </div>
    </section>
</body>